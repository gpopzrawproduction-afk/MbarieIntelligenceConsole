<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- PRIMARY COLORS - Golden/Amber Palette -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <!-- Golden Accents -->
    <Color x:Key="PrimaryGold">#FFB84D</Color>
    <Color x:Key="PrimaryGoldLight">#FFC976</Color>
    <Color x:Key="PrimaryGoldDark">#FF8C42</Color>
    <Color x:Key="AccentAmber">#D4AF37</Color>
    <Color x:Key="AccentBronze">#CD7F32</Color>
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- BACKGROUND COLORS - Dark Gradients -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <Color x:Key="BackgroundDeep">#0A0A0F</Color>
    <Color x:Key="BackgroundMid">#1A1520</Color>
    <Color x:Key="BackgroundElevated">#1E293B</Color>
    <Color x:Key="BackgroundCard">#252D3D</Color>
    <Color x:Key="BackgroundHover">#2A3A52</Color>
    <Color x:Key="BackgroundSelected">#334155</Color>
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- TEXT COLORS -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <Color x:Key="TextPrimary">#F8FAFC</Color>
    <Color x:Key="TextSecondary">#CBD5E1</Color>
    <Color x:Key="TextTertiary">#94A3B8</Color>
    <Color x:Key="TextMuted">#64748B</Color>
    <Color x:Key="TextDisabled">#475569</Color>
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- STATUS COLORS -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessLight">#22C55E</Color>
    <Color x:Key="Warning">#FF8C42</Color>
    <Color x:Key="WarningLight">#FFB84D</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="ErrorLight">#F87171</Color>
    <Color x:Key="Info">#38BDF8</Color>
    <Color x:Key="InfoLight">#60A5FA</Color>
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- BORDER COLORS -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <Color x:Key="BorderGold">#FFB84D</Color>
    <Color x:Key="BorderGoldSubtle">#FFB84D40</Color>
    <Color x:Key="BorderSubtle">#334155</Color>
    <Color x:Key="BorderFocus">#FF8C42</Color>
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- SOLID COLOR BRUSHES -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <SolidColorBrush x:Key="PrimaryGoldBrush" Color="{StaticResource PrimaryGold}"/>
    <SolidColorBrush x:Key="PrimaryGoldLightBrush" Color="{StaticResource PrimaryGoldLight}"/>
    <SolidColorBrush x:Key="PrimaryGoldDarkBrush" Color="{StaticResource PrimaryGoldDark}"/>
    <SolidColorBrush x:Key="AccentAmberBrush" Color="{StaticResource AccentAmber}"/>
    
    <SolidColorBrush x:Key="BackgroundDeepBrush" Color="{StaticResource BackgroundDeep}"/>
    <SolidColorBrush x:Key="BackgroundMidBrush" Color="{StaticResource BackgroundMid}"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="{StaticResource BackgroundElevated}"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCard}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    
    <SolidColorBrush x:Key="BorderGoldBrush" Color="{StaticResource BorderGold}"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtle}"/>

    <!-- Additional brushes used by premium styles -->
    <SolidColorBrush x:Key="BorderGoldSubtleBrush" Color="{StaticResource BorderGoldSubtle}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLight}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}" />
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLight}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}" />
    
    <!-- ??????????????????????????????????????????????????? -->
    <!-- GRADIENT BRUSHES -->
    <!-- ??????????????????????????????????????????????????? -->
    
    <!-- Golden Gradient (Horizontal) -->
    <LinearGradientBrush x:Key="GoldenGradient" StartPoint="0%,0%" EndPoint="100%,0%">
        <GradientStop Color="#FFB84D" Offset="0"/>
        <GradientStop Color="#FF8C42" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Golden Gradient (Vertical) -->
    <LinearGradientBrush x:Key="GoldenGradientVertical" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#FFB84D" Offset="0"/>
        <GradientStop Color="#FF8C42" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Background Gradient (Dark to Mid) -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Color="#0A0A0F" Offset="0"/>
        <GradientStop Color="#1A1520" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Card Background with Transparency -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0%,0%" EndPoint="100%,100%">
        <GradientStop Color="#1E293BCC" Offset="0"/>
        <GradientStop Color="#252D3DCC" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Glow Effect Gradient -->
    <RadialGradientBrush x:Key="GoldenGlow" GradientOrigin="50%,50%">
        <GradientStop Color="#FFB84D40" Offset="0"/>
        <GradientStop Color="#FFB84D00" Offset="1"/>
    </RadialGradientBrush>
    
</ResourceDictionary>
