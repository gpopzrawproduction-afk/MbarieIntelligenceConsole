<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
             x:Class="MIC.Desktop.Avalonia.Controls.LoadingSpinner"
             Background="Transparent">

    <!-- Neon Loading Spinner -->
    <Grid Width="60" Height="60">
        
        <!-- Outer ring with glow -->
        <Border Width="60" Height="60"
                CornerRadius="30"
                BorderBrush="#4000E5FF"
                BorderThickness="3"
                BoxShadow="0 0 20 0 #4000E5FF" />
        
        <!-- Animated spinner segment -->
        <Border x:Name="SpinnerRing"
                Width="60" Height="60"
                CornerRadius="30"
                BorderThickness="3"
                RenderTransformOrigin="0.5,0.5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#00E5FF" Offset="0" />
                    <GradientStop Color="Transparent" Offset="0.5" />
                    <GradientStop Color="Transparent" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.RenderTransform>
                <RotateTransform Angle="0" />
            </Border.RenderTransform>
            <Border.Styles>
                <Style Selector="Border#SpinnerRing">
                    <Style.Animations>
                        <Animation Duration="0:0:1" IterationCount="Infinite">
                            <KeyFrame Cue="0%">
                                <Setter Property="RenderTransform" Value="rotate(0deg)" />
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="RenderTransform" Value="rotate(360deg)" />
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
        </Border>
        
        <!-- Center dot -->
        <Ellipse Width="8" Height="8"
                 Fill="#00E5FF"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />
        
    </Grid>

</UserControl>
