<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="MIC.Desktop.Avalonia.Controls.EmptyState"
             Background="Transparent">

    <!-- Empty State Component for views with no data -->
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="24"
                Margin="48">
        
        <!-- Icon Container -->
        <Border Width="120" Height="120"
                CornerRadius="60"
                Background="#10FFFFFF"
                HorizontalAlignment="Center">
            <PathIcon Width="48" Height="48"
                      Foreground="#455A64"
                      Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,5V19H5V5H19Z" />
        </Border>
        
        <!-- Title -->
        <TextBlock Text="No Data Available"
                   FontSize="20"
                   FontWeight="Light"
                   Foreground="#FFFFFF"
                   HorizontalAlignment="Center" />
        
        <!-- Description -->
        <TextBlock Text="There's nothing here yet. Create your first item to get started."
                   FontSize="14"
                   Foreground="#607D8B"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   MaxWidth="400"
                   HorizontalAlignment="Center" />
        
    </StackPanel>

</UserControl>
