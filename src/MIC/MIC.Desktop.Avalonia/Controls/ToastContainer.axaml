<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:services="using:MIC.Desktop.Avalonia.Services"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="MIC.Desktop.Avalonia.Controls.ToastContainer"
             x:DataType="services:NotificationService">

    <ItemsControl ItemsSource="{Binding Notifications}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Spacing="8" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type services:ToastNotification}">
                <Border Background="{Binding BackgroundColor}"
                        BorderBrush="{Binding BorderColor}"
                        BorderThickness="1,1,1,1"
                        CornerRadius="8"
                        Padding="16,12"
                        MinWidth="320"
                        MaxWidth="400"
                        BoxShadow="0 4 20 0 #40000000">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Width="32" Height="32"
                                CornerRadius="8"
                                Background="{Binding BackgroundColor}"
                                Margin="0,0,12,0"
                                VerticalAlignment="Top">
                            <TextBlock Text="{Binding Icon}"
                                       FontSize="16"
                                       Foreground="{Binding IconColor}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                        
                        <!-- Content -->
                        <StackPanel Grid.Column="1" Spacing="4">
                            <TextBlock Text="{Binding Title}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFF" />
                            <TextBlock Text="{Binding Message}"
                                       FontSize="12"
                                       Foreground="#B0BEC5"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                        
                        <!-- Close Button -->
                        <Button Grid.Column="2"
                                Background="Transparent"
                                Padding="4"
                                Margin="8,0,0,0"
                                VerticalAlignment="Top"
                                Click="OnDismissClicked"
                                Tag="{Binding}">
                            <TextBlock Text="×"
                                       FontSize="16"
                                       Foreground="#607D8B" />
                        </Button>
                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</UserControl>
