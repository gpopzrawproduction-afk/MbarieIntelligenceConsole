<UserControl xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:MIC.Desktop.Avalonia.ViewModels"
xmlns:conv="using:MIC.Desktop.Avalonia.Converters"
xmlns:entities="using:MIC.Core.Domain.Entities"
mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
x:Class="MIC.Desktop.Avalonia.Views.AlertListView"
x:DataType="vm:AlertListViewModel"
Background="#0B0C10">

    <UserControl.Resources>
        <conv:ZeroToBoolConverter x:Key="ZeroToBoolConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="20">

            <!-- Page Header Section -->
            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
                <TextBlock Text="ALERT MANAGEMENT" 
                           Classes="title"
                           Foreground="{StaticResource PrimaryGoldBrush}"/>
                <TextBlock Text="Monitor, acknowledge, and resolve system alerts" 
                           Classes="subtitle"/>
            </StackPanel>

            <!-- Action Bar -->
            <Border Grid.Row="1" 
                    Classes="glass-card-premium"
                    Margin="0,0,0,16"
                    Padding="16">
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <TextBox Grid.Column="0"
                             Watermark="Search alerts by name, description, or source..."
                             Text="{Binding SearchText}"
                             Background="{StaticResource BackgroundDeepBrush}"
                             BorderBrush="{StaticResource BorderSubtleBrush}"
                             BorderThickness="1"
                             CornerRadius="8"
                             Padding="12,8"
                             FontSize="14"/>
                    
                    <Button Grid.Column="1"
                            Content="?? REFRESH"
                            Command="{Binding RefreshCommand}"
                            Classes="outline-golden"
                            Margin="12,0,0,0"/>
                    
                    <Button Grid.Column="2"
                            Content="? NEW ALERT"
                            Command="{Binding CreateAlertCommand}"
                            Classes="golden"
                            Margin="12,0,0,0"/>
                </Grid>
            </Border>

        <!-- Filter Bar removed: merged into action bar for premium layout -->

            <!-- Alerts List -->
            <ScrollViewer Grid.Row="2">
                <ItemsControl ItemsSource="{Binding Alerts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Classes="metric-card"
                                    Margin="0,0,0,12"
                                    Cursor="Hand">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    
                                    <!-- Severity Indicator -->
                                    <Border Grid.Column="0"
                                            Width="4"
                                            CornerRadius="2"
                                            Margin="0,0,16,0"
                                            Background="{Binding SeverityColor}" />
                                    
                                    <!-- Alert Content -->
                                    <StackPanel Grid.Column="1" Spacing="8">
                                        <TextBlock Text="{Binding AlertName}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   MaxLines="2"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <TextBlock FontSize="12" Foreground="{StaticResource TextTertiaryBrush}">
                                                <Run Text="???"/>
                                                <Run Text="{Binding SeverityDisplay}"/>
                                            </TextBlock>
                                            <TextBlock Text="•" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                            <TextBlock FontSize="12" Foreground="{StaticResource TextTertiaryBrush}">
                                                <Run Text="??"/>
                                                <Run Text="{Binding CreatedAt, StringFormat='MMM dd, yyyy'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Status Badge -->
                                    <Border Grid.Column="2"
                                            Background="{Binding StatusColor}"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StatusDisplay}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FFFFFF"/>
                                    </Border>
                                    
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <Border Grid.Row="2"
                    Classes="glass-card-premium"
                    IsVisible="{Binding Alerts.Count, Converter={StaticResource ZeroToBoolConverter}}"
                    Padding="60">
                <StackPanel Spacing="16" HorizontalAlignment="Center">
                    <TextBlock Text="??"
                               FontSize="64"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="No alerts yet"
                               Classes="section-title"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Create your first alert to start monitoring"
                               Classes="subtitle"
                               HorizontalAlignment="Center"/>
                    <Button Content="Create Alert"
                            Command="{Binding CreateAlertCommand}"
                            Classes="golden"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Footer Stats -->
            <Border Grid.Row="3"
                    Classes="glass-card-premium"
                    Margin="0,16,0,0"
                    Padding="16">
                <TextBlock FontSize="13" Foreground="{StaticResource TextTertiaryBrush}">
                    <Run Text="Loaded "/>
                    <Run Text="{Binding Alerts.Count}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryGoldBrush}"/>
                    <Run Text=" alert(s) • Total: "/>
                    <Run Text="{Binding Alerts.Count}" FontWeight="SemiBold" Foreground="{StaticResource PrimaryGoldBrush}"/>
                    <Run Text=" alert(s)"/>
                </TextBlock>
            </Border>

        </Grid>
    </ScrollViewer>

</UserControl>
