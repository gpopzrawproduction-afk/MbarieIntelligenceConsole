<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MIC.Desktop.Avalonia.Views.ShortcutCustomizationDialog"
        Title="Customize Keyboard Shortcuts"
        Width="520" Height="380"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="24">
        <TextBlock Text="Customize Keyboard Shortcuts" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
        <TextBlock Text="Assign your preferred keys to common actions." FontSize="14" Margin="0,0,0,24" TextWrapping="Wrap"/>
        <Button Content="OK" HorizontalAlignment="Right" Width="80" IsDefault="True" Click="OnOkClick"/>
    </StackPanel>
</Window>
