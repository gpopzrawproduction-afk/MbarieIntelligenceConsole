<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MIC.Desktop.Avalonia.Views.SearchHelpDialog"
        Title="Help Search"
        Width="520" Height="380"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="24">
        <TextBlock Text="Search Help" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
        <TextBox Watermark="Type a keyword or question..." Margin="0,0,0,16"/>
        <TextBlock Text="(Help search results will appear here.)" FontSize="13"/>
        <Button Content="Close" HorizontalAlignment="Right" Width="80" IsDefault="True" Click="OnCloseClick"/>
    </StackPanel>
</Window>
